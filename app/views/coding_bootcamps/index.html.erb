<div class="container bootcamps-index">
  <h1>Click on a bootcamp to learn more</h1>
  
  <% @coding_bootcamps.each do |coding_bootcamp| %>
    <ul>
      <%= link_to coding_bootcamp do %>
        <li class="col-md-3">
          <%= image_tag('bootcamps_logo/' + coding_bootcamp.name.downcase.gsub(' ', '')+'.png', class: 'bootcamp-logo') %>
          <%= coding_bootcamp.name %>
        </li>
      <% end %>

    </ul>
  <% end %>
</div>