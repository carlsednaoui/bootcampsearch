<p id="notice"><%= notice %></p>
<div class="header">
  <div class="container">
    <h1 class="bootcamp-name"><%= link_to(@coding_bootcamp.name, @coding_bootcamp.website, target: "blank") %></h1>
    <h2 class="bootcamp-tagline"><%= @coding_bootcamp.tagline %></h2>

    <!-- <div class="bootcamp-logo">
      image_tag('bootcamps_logo/' + @bootcamp_path + '-logo.png')
    </div> -->

    <div class="bootcamp-tags row">
      <% if @programs.length > 0 %>
        <div class="bootcamp-tag col-md-4 col-md-offset-3 learn-tag">
          <h2>Learn</h2>
          <%= raw @program_languages.map { |l| link_to l.titleize , language_path(l) }.join(', ') %>
        </div>

        <div class="bootcamp-tag col-md-2">
          <h2>Location</h2>
          <%= raw @program_locations.map { |l| link_to l.titleize, language_path(l) }.join(', ') %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h2>About <%= @coding_bootcamp.name %></h2>
  <div class="bootcamp-description"><%= raw @coding_bootcamp.description %></div>
  <p><%= link_to @coding_bootcamp.website, @coding_bootcamp.website, target: "blank" %></p>

  <% if @programs.length > 0 %>
  <h2>What you can learn with <%= @coding_bootcamp.name %></h2>
    <% @programs.each do |program| %>
      <div class="bootcamp-program">
        <p>
          <strong>name:</strong> <%= program.name %> <br>
          <strong>coding_bootcamp_id:</strong> <%= program.coding_bootcamp_id %> <br>
          <strong>focus:</strong> <%= raw program.language_list.map { |l| link_to l, language_path(l) }.join(', ') %>
          <strong>location:</strong> <%= raw program.location_list.map { |l| link_to l, location_path(l) }.join(', ') %>
          <br><strong>why we love it:</strong>
        </p>
      </div>
    <% end %>
  <% end %>

  <%= link_to 'Back', coding_bootcamps_path %>

</div>